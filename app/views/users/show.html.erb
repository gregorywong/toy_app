<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<br>

<p>
  <strong>Microposts:</strong>
  <% if @user.microposts.empty? %>
    None
  <% end %>
</p>

<% if ! @user.microposts.empty? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Content</th>
      </tr>
    </thead>

    <tbody>
      <% @user.microposts.each do |post| %>
        <tr>
          <td>
            <%= post.id %>
          </td>
          <td>
            <%= post.content %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <table>
<% end %>

<br>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
